<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_item_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/task_name"
        />

    <TextView
        android:id="@+id/tv_item_task_priority_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_item_task_name"
        android:layout_marginEnd="5sp"
        android:text="@string/task_priority"
        style="@style/task_info"
        />

    <TextView
        android:id="@+id/tv_item_task_priority_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_item_task_priority_label"
        android:layout_below="@id/tv_item_task_name"
        style="@style/task_info"
        />

    <TextView
        android:id="@+id/tv_item_task_limit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_item_task_priority_label"
        android:visibility="gone"
        style="@style/task_info"
        />

    <TextView
        android:id="@+id/tv_item_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="5dp"
        style="@style/task_info"
        />

    <Button
        android:id="@+id/btn_item_task_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_item_task_date"
        android:text="@string/btn_finish_task"
        android:textAllCaps="false"
        />

</RelativeLayout>